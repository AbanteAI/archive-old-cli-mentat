{
  "name": "mentat",
  "displayName": "Mentat",
  "description": "Mentat - The AI Coding Assistant",
  "version": "0.0.1",
  "publisher": "AbanteAI",
  "repository": "https://github.com/AbanteAI/mentat/mentat-vscode",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView",
    "onCommand:mentat.helloWorld"
  ],
  "main": "./build/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "Mentat",
          "title": "Mentat Dashboard",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "Mentat": [
        {
          "type": "webview",
          "id": "MentatChat",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "mentat.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "clean": "node ./scripts/clean.mjs",
    "build-base": "npm run clean && node ./scripts/build.mjs",
    "build": "npm run build-base -- --sourcemap",
    "watch": "npm run build-base -- --sourcemap --watch",
    "vscode": "code --extensionDevelopmentPath=$PWD .",
    "vscode:prepublish": "npm run build-base -- --minify"
  },
  "devDependencies": {
    "@types/node": "20.8.3",
    "@types/react": "18.2.25",
    "@types/react-dom": "18.2.11",
    "@types/vscode": "1.83.0",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "esbuild": "0.19.4",
    "eslint": "8.51.0",
    "eslint-plugin-react": "7.33.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.2.2"
  }
}
